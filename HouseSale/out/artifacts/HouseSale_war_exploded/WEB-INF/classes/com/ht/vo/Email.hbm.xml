<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ht.vo.Email" table="email">
        <id name="emailid" column="emailid">
            <generator class="native"/>
        </id>
        <property name="userid" column="userid" type="java.lang.String"/>
        <property name="receid" column="receid" type="java.lang.String"/>
        <property name="topic" column="topic" type="java.lang.String"/>
        <property name="content" column="content" type="java.lang.String"/>
        <property name="sendtime" column="sendtime" type="java.util.Date"/>
        <property name="isRead" column="isRead" type="java.lang.String"/>
    </class>
</hibernate-mapping>